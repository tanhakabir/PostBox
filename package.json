{
  "name": "rest-book",
  "displayName": "REST Book",
  "description": "A Postman-like REST API Notebook for sending to and receiving from REST endpoints.",
  "version": "0.2.2",
  "publisher": "tanha",
  "repository": {
    "url": "https://github.com/tanhakabir/rest-book"
  },
  "engines": {
    "vscode": "^1.50.0"
  },
  "enableProposedApi": true,
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onNotebook:restbook.notebook",
    "onLanguage:rest-book"
  ],
  "main": "./dist/extension-node.js",
  "browser": "./dist/extension-web.js",
  "contributes": {
    "notebookProvider": [
      {
        "viewType": "restbook.notebook",
        "displayName": "REST Book",
        "priority": "default",
        "selector": [
          {
            "filenamePattern": "*.restbook"
          }
        ]
      }
    ],
    "notebookOutputRenderer": [
      {
        "id": "rest-book",
        "displayName": "REST Book Renderer",
        "entrypoint": "./dist/renderer.js",
        "mimeTypes": [
          "x-application/rest-book"
        ]
      }
    ],
    "languages": [
      {
        "id": "rest-book",
        "aliases": [
          "REST Book"
        ],
        "filenamePatterns": [
          "*.rest-book.txt"
        ]
      }
    ],
    "grammars": [
      {
        "language": "rest-book",
        "scopeName": "source.rest-book",
        "path": "./syntaxes/rest-book.tmGrammar.json",
        "embeddedLanguages": {
          "meta.embedded.block.javascript": "javascript",
          "meta.embedded.block.json": "json",
          "meta.embedded.block.html": "html",
          "meta.embedded.block.xml": "xml",
          "meta.embedded.block.css": "css"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode none",
    "watch": "webpack --mode none --watch  --info-verbosity verbose",
    "lint": "eslint --config .eslintrc.json ./src/**/*.ts",
    "ts-compile": "tsc -b",
    "integration-test": "npm run ts-compile && node ./out/extension/test-integration/runTest.js",
    "unit-test": "npm run ts-compile && npx mocha ./out/extension/test-unit",
    "compile-lint-test": "npm run compile && npm run lint && npm run unit-test",
    "precommit": "npm run lint",
    "deploy": "npx vsce publish --web --noVerify"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/lodash": "^4.14.165",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/user-home": "^2.0.0",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "axios": "^0.21.1",
    "css-loader": "^5.0.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "os": "^0.1.1",
    "os-browserify": "^0.3.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.0.2",
    "url": "^0.11.0",
    "vscode-dts": "^0.3.1",
    "vscode-test": "^1.4.0",
    "webpack": "^5.12.3",
    "webpack-cli": "^4.3.1"
  },
  "dependencies": {
    "@types/react": "^17.0.0",
    "lodash": "^4.17.20",
    "preact": "^10.5.9",
    "user-home": "^2.0.0"
  }
}
