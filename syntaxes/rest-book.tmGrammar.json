{
    "scopeName": "source.rest-book",
    "patterns":[
        {
            "include": "#constant"
        },
        {
            "include": "#headerkey"
        },
        {
            "include": "#json"
        }
    ],
    "repository": {
        "constant": {
            "name": "constant.language",
            "match": "\\b(GET|POST|PUT|DELETE)\\b"
        },
        "headerkey": {
            "name": "keyword.other",
            "match": "([A-Za-z\\-]+):\\s"
        },
        "json": {
            "begin": "\\{",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.dictionary.begin.json"
                }
            },
            "end": "\\}",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.dictionary.end.json"
                }
            },
            "name": "meta.embedded.block.json",
            "patterns": [
                {
                    "include": "source.json"
                }
            ]
        }
    }
}